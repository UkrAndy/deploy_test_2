<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Список товарів</title>
    <link rel="stylesheet" href="/stylesheets/products/list.css" />
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <script src="/javascripts/RequestManager.js"></script>
  </head>
  <body>
    <%-include('sections/header.ejs')%>
    <hr />
    <% products.forEach(product => { %>
    <div class="prod-container">
      <img src="<%= product.imgSrc %>" class="prod-image" />
      <a href="/products/<%= product.id %>"><%= product.title %></a>
      <span><%= product.price %></span>
      <a href="/products/edit/<%= product.id %>" class="edit-link">Edit</a>
      <button
        onclick="RequestManager.deleteRequest('/products', { id: <%= product.id %> })"
      >
        Delete
      </button>
    </div>
    <% }) %>
    <hr />
    <a href="/products/create">Додати новий товар</a>
    <hr />

    <%-include('sections/footer.ejs')%>
  </body>
</html>
